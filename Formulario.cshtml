@using deliveryfast.Models;
@model Cadastro
@{
    ViewData["Title"] = "Insira os Dados Para Entrega!";
}
<h3>@ViewData["Title"]</h3>


<div class="container">
    <div class="jumbotron col-6" style="background-color: yellow;">
        <form asp-action="Formulario" method="POST" class="col-md-10">
            <fieldset>
                <div class="form-group">
                    <label asp-for="Nome">Nome:</label>
                    <input asp-for="Nome" required class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Endereco">Endereço:</label>
                    <input asp-for="Endereco" required class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Telefone">Telefone:</label>
                    <input asp-for="Telefone" required class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="tipopao">Tipo de Pão:</label>
                    <select required="required" name="tipopao" class="form-control">
                        <option selected="selected" value="">Selecione</option>
                        <option value="1">Francês</option>
                        <option value="2">Doce</option>
                        <option value="3">Carteira</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Quantidade">Quantidade:</label>
                    <input asp-for="Quantidade" required class="form-control" />
                </div>
            </fieldset>
            <div>
                <input type="submit" value="CONCLUIR PEDIDO" class="btn btn-large btn-warning text-warning"
                    style="background-color: red" style="border-radius: 0.5em;"
                    style="text-shadow: 2px 2xp 2px rgba(0,0,0,0,5)" />

                <p id="Mensagem">@ViewBag.Mensagem </p>
            </div>
        </form>
    </div>